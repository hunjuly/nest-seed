{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Start",
            "type": "shell",
            "command": "npm start"
        },
        {
            "label": "Watch Test",
            "type": "shell",
            "command": "npm test"
        },
        {
            "label": "Test All & Code Coverage",
            "type": "shell",
            "command": "npm run test:all"
        },
        {
            "label": "Launch PSQL",
            "type": "shell",
            "command": "bash scripts/launch_psql.sh"
        },
        {
            "label": "Clean up",
            "type": "shell",
            "command": "bash scripts/clean_up.sh"
        },
        {
            "label": "Logging During Testing - Enable",
            "type": "shell",
            "command": "bash scripts/set_logging_during_testing.sh"
        },
        {
            "label": "Logging During Testing - Disable",
            "type": "shell",
            "command": "rm -f config/@DEV_LOGGING_DURING_TESTING"
        },
        {
            "label": "Generate Migration",
            "type": "shell",
            "command": "npm run migration:generate"
        }
    ]
}
