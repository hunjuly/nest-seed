{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Test Suites",
            "detail": "Run selected test suites (all, app, common).",
            "type": "shell",
            "command": "npm run ${input:testSuite}"
        },
        {
            "label": "Watch Start",
            "detail": "Start the Nest development server and watch for file changes (--debug 9230).",
            "type": "shell",
            "command": "npm start"
        },
        {
            "label": "Watch Test",
            "detail": "Run Jest tests and watch for file changes (--inspect=9231).",
            "type": "shell",
            "command": "npm test"
        },
        {
            "label": "Workspace Setup",
            "detail": "Set up the development environment and install necessary dependencies.",
            "type": "shell",
            "command": "bash scripts/workspace_setup.sh"
        },
        {
            "label": "Workspace Cleanup",
            "detail": "Reset the development environment and remove all data.",
            "type": "shell",
            "command": "bash scripts/workspace_cleanup.sh"
        }
    ],
    "inputs": [
        {
            "id": "testSuite",
            "type": "pickString",
            "default": "test:services",
            "options": [
                "test:services",
                "test:all",
                "test:app",
                "test:common"
            ],
            "description": "Select a test suite to run."
        }
    ]
}
