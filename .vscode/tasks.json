{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Start",
            "type": "shell",
            "command": "npm start"
        },
        {
            "label": "Watch Test",
            "type": "shell",
            "command": "npm test"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "npm run test:${input:tests}"
        },
        {
            "label": "Launch PSQL",
            "type": "shell",
            "command": "bash scripts/launch_psql.sh"
        },
        {
            "label": "Clean up",
            "type": "shell",
            "command": "bash scripts/clean_up.sh"
        },
        {
            "label": "Logging During Testing",
            "type": "shell",
            "command": "bash scripts/set_logging_during_testing.sh ${input:enable_disable}"
        },
        {
            "label": "Generate Migration",
            "type": "shell",
            "command": "npm run migration:generate"
        }
    ],
    "inputs": [
        {
            "id": "enable_disable",
            "description": "",
            "default": "disable",
            "type": "pickString",
            "options": [
                "enable",
                "disable"
            ]
        },
        {
            "id": "tests",
            "description": "",
            "default": "app",
            "type": "pickString",
            "options": [
                "app",
                "all",
                "common"
            ]
        }
    ]
}
