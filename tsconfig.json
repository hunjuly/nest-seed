{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./_output/build",
        "baseUrl": ".",
        "paths": {
            "services/*": [
                "projects/apps/services/src/*"
            ],
            "common": [
                "projects/libs/common/src/index"
            ],
            "config": [
                "projects/libs/config/index"
            ]
        },
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "projects/**/*"
    ]
}
